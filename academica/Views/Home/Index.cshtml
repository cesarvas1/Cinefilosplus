@{
    ViewData["Title"] = "CINEFILOSPLUS";
}

<h1 class="text-center">Bienvenido amantes del cine a tu página de consulta favorita</h1>

<div class="text-center">
    <div class="slideshow-container">
        <!-- Imagen 1 -->
        <div class="mySlides">
            <img src="~/img/imagen1.jpg" style="width:100%">
        </div>

        <!-- Imagen 2 -->
        <div class="mySlides">
            <img src="~/img/imagen2.jpg" style="width:100%">
        </div>

        <!-- Imagen 3 -->
        <div class="mySlides">
            <img src="~/img/imagen3.jpg" style="width:100%">
        </div>

        <!-- Controles de navegación -->
        <a class="prev" onclick="changeSlide(-1)">&#10094;</a>
        <a class="next" onclick="changeSlide(1)">&#10095;</a>
    </div>

    <!-- Indicadores (puntos) -->
    <div class="dots">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>
</div>

@section Scripts {
    <script>
        let slideIndex = 0;
        showSlides();

        function showSlides() {
            let slides = document.getElementsByClassName("mySlides");
            let dots = document.getElementsByClassName("dot");

            // Oculta todas las diapositivas
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }

            slideIndex++;
            if (slideIndex > slides.length) {slideIndex = 1}

            // Elimina la clase 'active' de todos los puntos
            for (let i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }

            slides[slideIndex-1].style.display = "block";
            dots[slideIndex-1].className += " active";
            setTimeout(showSlides, 3000); // Cambia de imagen cada 3 segundos
        }

        function currentSlide(n) {
            slideIndex = n;
            showSlides();
        }

        function changeSlide(n) {
            slideIndex += n - 1;
            showSlides();
        }
    </script>
}

<style>
    /* Estilos del contenedor */
    .slideshow-container {
        position: relative;
        max-width: 100%;
        margin: auto;
        overflow: hidden;
        border-radius: 10px;
    }

    /* Estilos de cada imagen */
    .mySlides {
        display: none;
        width: 100%;
    }

    /* Controles de flechas */
    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        padding: 16px;
        margin-top: -22px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
    }

    .next {
        right: 0;
        border-radius: 3px 0 0 3px;
    }

    /* Estilos de los indicadores (puntos) */
    .dots {
        text-align: center;
        padding: 10px;
        background: #333;
    }

    .dot {
        cursor: pointer;
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

        .active, .dot:hover {
            background-color: #717171;
        }
</style>

</div>
